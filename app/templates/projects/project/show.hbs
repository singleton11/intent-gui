<table class="table">
  <tbody>
  <tr>
    <td><b>ACTIONS</b></td>
    <td>{{link-to 'EDIT' 'projects.project.edit' model.id class='btn btn-primary'}}&nbsp;
      <button {{action 'confirm'}} class="btn btn-danger">REMOVE</button>
    </td>
  </tr>
  <tr>
    <td><b>ID</b></td>
    <td>{{model.id}}</td>
  </tr>
  <tr>
    <td><b>TITLE</b></td>
    <td>{{model.title}}</td>
  </tr>
  <tr>
    <td><b>DESCRIPTION</b></td>
    <td>{{model.description}}</td>
  </tr>
  <tr>
    <td><b>CREATED</b></td>
    <td>{{model.created}}</td>
  </tr>
  <tr>
    <td><b>MODIFIED</b></td>
    <td>{{model.modified}}</td>
  </tr>
  </tbody>
</table>
<div class="modal fade" id="confirm">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Do you really want to delete this record?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" {{action 'remove'}}>Confirm</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
{{outlet}}